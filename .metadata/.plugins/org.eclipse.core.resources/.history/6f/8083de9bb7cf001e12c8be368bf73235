package org.kh.java;

public class Constant1 {

	public static void main(String[] args) {
		//상수(Constant)와 리터럴(Literal) 상수앞에는 final 와 대문자
		final int MAX_POINT = 100;
		final int MIN_POINT = 0;
		final double PI = 3.141592;
		final String MY_NAME = "이민규";
		//MY NAME = "오민규"; 상수는 값 변경이 되지않는다. 변수였으면 바꼈다.
		//위처럼 final 지시자가 선언되고, 대문자로 표기된것이 상수
		//값이 항상 같아 더이상 변할수 없는 값을 뜻함
		//변수나 상수에 대입되는 값을 리터럴(Literal)이라고 함.
		System.out.println("최소점수 : "+MIN_POINT);
		System.out.println("최고점수 : "+MAX_POINT);
		System.out.println("이름 : "+MY_NAME);
		System.out.println("반지름 10인 원의 둘레길이 : "+(10*2*PI));
		System.out.printf("PI : %.100f",PI);

	}

}
